<div class="container">
  <div class="row">
    <div class="col-sm-12 mx-auto">
      <h3>お問い合わせフォーム</h3>
      <%= form_with model: @contact, local: true do |f| %>
      <%= f.label :お名前（フルネーム） %>
      <%= f.text_field :name %>
      <%= f.label :お問い合わせ内容 %>
      <%= f.text_area :message, placeholder: "なるべく詳細にお願いします。" %>
      <%= f.submit "送信ヽ(´▽｀)/" %>
      <% end %>
    </div>
  </div>
</div>