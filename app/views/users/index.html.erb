
<div class="container">
  <div class="row mx-auto">
    <div class="col-sm-6 mx-auto">
          <% @users.each do |user| %>
            <% if current_user.sex != user.sex %>
              <div class="row text-center">
                <div class="card mx-auto mb-4 mt-4" style="width: 18rem;">
                  <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg" %>
                  <div class="card-body">
                  <h5 class="card-title">★<%= user.name %>★<%= user.age %>才</h5>
                  <p class="card-text"><%= user.playing_game %></p>
                  <%= link_to "もっと知りたい", user_path(user), class: "btn btn-primary" %>
                </div>
              </div>
           </div>
          <% end %>
        <% end %>
    </div>
  </div>
</div>