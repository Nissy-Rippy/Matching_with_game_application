<div class="container">
  <div class="row">
    <div class="col-sm-12 mx-auto">
      <%= attachment_image_tag @user, :profile_image, :fill,300,300, fall_back: "no_image.jpg",size: "300x300" %>
      <div class="row mx-auto">
        <table>
          <thead>
          <tr>
           <th>フォロー数</th>
           <th>5人</th>
          </tr>
          <tr>
           <th>フォロワー数</th>
           <th>10人</th>
          </tr>
          <tr>
           <th width="200">MYプロフィール</th>
           <th width="200"><%= link_to edit_user_path(@user) do %>
           <i class="fas fa-user-cog"></i>
           <% end %>
           </th>
           <th></th>
          </tr>
          </thead>
          <tbody>
          <tr>
           <td>名前</td>
           <td><%= @user.name %></td>
          </tr>
          <tr>
           <td>年齢</td>
           <td><%= @user.age %></td>
          </tr>
          <tr>
           <td>住所</td>
           <td><%= @user.address %></td>
          </tr>
          <tr>
           <td>プレイ中のゲーム</td>
           <td><%= @user.playing_game %></td>
          </tr>
          <tr>
           <td>プロフィール</td>
           <td></td>
          </tr>
          <tr>
           <td colspan="2" class=" border round"><%= @user.introduction %></td>
           <td></td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>