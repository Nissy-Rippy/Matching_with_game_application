<div class="container">
  <div class="row">
    <div class="col-sm-6 mx-auto">
            <div class="mt-5 mb-2"><%= attachment_image_tag @group, :image, :fill,450,350, fallback: "no_image.jpg", size: "450x350" %></div>
            <div><strong>グループ名：<%= @group.name %></strong></div>
            <div><strong>カテゴリー：<%= @group.genre %></strong></div>
            <div><strong>グループ人数：<%= @group.users.count %>人</strong></div>
            <div><strong>グールプ説明：<%= @group.introduction %></strong></div>
            <%#条件分岐によってボタンの種類を変える%>
            <% if @group.users.include?(current_user) %>
            <%= link_to "脱退する", group_path(@group), method: :delete, class: "btn btn-danger" %>
            <%# グループチャットのIDはルームのIDを入れている。%>
            <%= link_to "グループチャット", group_chat_path(@group), class: "btn btn-success" %>
            <% else %>
            <%= link_to "参加する", group_join_path(@group), class: "btn btn-info" %></p>
            <% end %>
          </div>
        </div>
      <h2 class="m-5 text-center">参加メンバー</h2>
          <% @users.each do |user| %>
              <div class="row mx-auto">
                <div class="card mb-3 mx-auto text-center" style="width: 18rem;">
                  <svg class="bd-placeholder-img card-img-top" width="100%" height="150"  preserveAspectRatio="xMidYMid slice" focusable="false" role="img"><title>Placeholder</title><rect fill="#868e96" width="100%" height="180"/><text fill="#dee2e6" dy=".3em" x="50%" y="50%">Image cap</text></svg>
                <div class="card-body">
                  <h5 class="card-title">★<%= user.name %>★<%= user.age %>才</h5>
                  <p class="card-text"><%= user.playing_game %></p>
                  <%= link_to "もっと知りたい", user_path(user), class: "btn btn-primary" %>
                  </div>
          <% end %>
          </div>
     </div>
  </div>
</div>


