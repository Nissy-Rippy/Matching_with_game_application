<h2>Follower Users</h2>
<% if @followers.exists? %>
    <% @followers.each do |user| %>
      <div class="row text-center">
      <div class="card mx-auto mb-4 mt-4" style="width: 18rem;">
        <svg class="bd-placeholder-img card-img-top" width="100%" height="180"  preserveAspectRatio="xMidYMid slice" focusable="false" role="img"><title>Placeholder</title><rect fill="#868e96" width="100%" height="180"/><text fill="#dee2e6" dy=".3em" x="50%" y="50%">Image cap</text></svg>
      <div class="card-body">
        <h5 class="card-title">★<%= user.name %>★<%= user.age %>才</h5>
        <p class="card-text"><%= user.playing_game %></p>
        <%= link_to "もっと知りたい", user_path(user), class: "btn btn-primary" %>
      </div>
    </div>
 </div>
    <% end %>

<% else %>
  <p>ユーザーはいません</p>
<% end %>
