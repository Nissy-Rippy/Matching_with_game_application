<div class="container">
  <div class="row">
    <div class="col-sm-12 mx-auto">

        <% if @users.present? %>
         <h2 class="text-center" style="color: red;">マッチング（∀｀*ゞ）</h2>
            <% @users.each do |user| %>
              <div class="text-center w-50 mx-auto mb-3">
                  <%= attachment_image_tag user, :profile_image,:fill,150,150, fallback: "no_image.jpg", size: "150x150" %>
                  <h5>★<%= user.name %>★<%= user.age %>才</h5>
                  <p><%= user.playing_game %></p>
                  <%= link_to "もっと知りたい", user_path(user), class: "btn btn-primary" %>
                  </div>
                <% if current_user != @user %>
                <%= link_to "DM(´∀｀*)", chat_path(@user.id), class: "btn btn-success" %>
                <% end %>
              </div>
            </div>
         </div>
       <% end %>

      <% else %>
        <h2 class="text-center">( ﾟдﾟ)ﾊｯ!・・マッチング<br/>してないだと。。。</h2>
      <% end %>
     </div>
   </div>
</div>