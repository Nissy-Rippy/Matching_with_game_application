<div class="container">
  <div class="row">
    <div class="col-sm-6 mx-auto">
      
      <h4 class="mt-3 mb-3 text-center"><%= @user.name %>とのチャット(´∀｀*)</h4>
       <table class="message table">
        <thead>
          <tr>
            <th style="text-align: left; font-size: 20px;"><%= current_user.name %></th>
            <th style="text-align: right; font-size: 20px;"><%= @user.name %></th>
          </tr>
        </thead>
        <% @chats.each do |chat| %>
       <%= render 'comment', chat: chat %>
        <% end %>
        </table>
        <%= form_with model: @chat, remote: true do |f| %>
        <%= f.text_field :message %>
        <%= f.hidden_field :room_id, value: @chat.room_id %>
        <%= f.submit "送信(´・ω・｀)", class: "btn btn-success btn-sm chat-btn" %>
        <% end %>
    </div>
  </div>
</div>