 <% if chat.user_id == current_user.id %>
 <tbody>
  <tr>
    <th><p style="text-align: left;"><%= attachment_image_tag chat.user , :profile_image, :fill,40,40, fallback: "no_image.jpg", size: "40x40", class: "rounded-circle" %><%= chat.message %></p></th>
    <th></th>
  </tr>
  <% else %>
  <tr>
    <th></th>
    <th><p style="text-align: right;"><%= chat.message %>
    <%= link_to user_path(chat.user) do %>
    <%= attachment_image_tag chat.user , :profile_image, :fill,40,40, fallback: "no_image.jpg", size: "40x40", class: "rounded-circle" %>
    <% end %></p></th>
  </tr>
</tbody>
<% end %>