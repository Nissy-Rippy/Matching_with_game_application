<div class="container">
  <div class="row">
    <div class="col-sm-8 mx-auto">
      <h2 class="text-center mt-3 mb-3">グループチャット(´∀｀*)</h2>
      
      
        <table class="message table mt-3 mb-3">
              
              <thead>
                  <tr>
                    <th style="text-align: left; font-size: 40px;"><%= "(*´σｰ｀)" %></th>
                    <th style="text-align: right; font-size: 40px;"><%= "(∀｀*ゞ)" %></th>
                  </tr>
              </thead>
              
              <% @chats.each do |chat| %>
              <% if chat.user_id == current_user.id %>
              <tbody>
              <tr>
                <th><p style="text-align: left;"><%= chat.message %></p></th>
                <th></th>
              </tr>
              <% else %>
              <tr>
                <th></th>
                <th><p style="text-align: right;"><%= chat.message %></p></th>
              </tr>
            </tbody>
            
            <% end %>
          <% end %>
        </table>
            
            <div class="text-center">
            <%= form_with model: @chat, remote: true do |f| %>
            <%= f.text_field :message %>
            <%= f.hidden_field :room_id, value: @group.room.id %>
            <%= f.submit "送信(´・ω・｀)", class: "btn btn-success btn-sm chat-btn text-center" %>
            <% end %>
            </div>
      
      </div>
    </div>
  </div>